{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "sourceMap": true
  },
  "ts-node": {
    // these options are overrides used only by ts-node
    // same as the --compilerOptions flag and the TS_NODE_COMPILER_OPTIONS environment variable
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  // "exclude": [
  //   "node_modules"
  // ]
}